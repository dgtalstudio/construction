$formCommon
  border-radius: 0
  color: $cor.texto
  background-color: $cor.white

$formFX
  will-change: background-color
  transition: background-color 0.3s
  &:hover
    background-color: darken($cor.white, 20%)
  &:active,
  &:focus
    outline: none
    background-color: lighten($cor.white, 10%)

form
  box-sizing: border-box
  margin: 0
  padding: 0
  display: block

label
  display: block
  margin-bottom: 10px

input[type="text"],
input[type="email"],
input[type="tel"],
input[type="number"],
input[type="password"],
textarea
  @extend $formFX
  @extend $formCommon
  appearance: none
  box-sizing: border-box
  border: 1px solid darken($cor.white, 20%)
  width: 100%
  padding: 10px
  white-space: normal

textarea
  min-height: 50px
  overflow: auto
  resize: vertical
  width: 100%

select,
select[size="0"],
select[size="1"]
  @extend $formFX
  @extend $formCommon
  appearance: none
  background-image: url('data:image/svg+xml;utf8,%3Csvg%20version%3D%221.1%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20xmlns%3Axlink%3D%22http%3A%2F%2Fwww.w3.org%2F1999%2Fxlink%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%3E%3Cpath%20fill%3D%22%23777777%22%20d%3D%22M7.406%207.828l4.594%204.594%204.594-4.594%201.406%201.406-6%206-6-6z%22%3E%3C%2Fpath%3E%3C%2Fsvg%3E');
  background-repeat: no-repeat
  background-position: calc(100% - 10px) center
  background-size: 24px
  box-sizing: border-box
  border: 1px solid darken($cor.white, 20%)
  width 100%
  padding 10px 34px 10px 10px

select::-ms-expand
  display: none

select[size],
select[multiple]
  background-image: none

select[multiple]
  height: 39px
  > option
    padding 3px

input[type="checkbox"]
  appearance: none

input[type="checkbox"] ~ span
  display: inline-block
  vertical-align: middle
  width: 25px
  height: @width
  border: 1px solid darken($cor.white, 20%)
  border-radius: 50%
  margin-right: 10px
  will-change: border-color, background-color
  transition: border-color 0.5s, background-color 0.5s

input[type="checkbox"]:checked ~ span
  background-color: $cor.roxo
  border-color: $cor.roxo
  position: relative
  color: $cor.white
  &:after
    content: 'âœ“'
    align()
